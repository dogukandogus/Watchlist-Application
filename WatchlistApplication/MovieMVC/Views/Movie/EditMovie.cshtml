@using MovieMVC.Models.ViewModels;
@model MovieVM


<h1> Edit Movie </h1>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie.MovieId" class="control-label"></label>
                <input asp-for="Movie.MovieId" class="form-control" disabled />
                <span asp-validation-for="Movie.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.MovieName" class="control-label"></label>
                <input asp-for="Movie.MovieName" class="form-control" />
                <span asp-validation-for="Movie.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.About" class="control-label"></label>
                <input asp-for="Movie.About" class="form-control" />
                <span asp-validation-for="Movie.About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.CategoryId" class="control-label"></label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x=>x.Movie.CategoryId,Model.DropDownForCategory,new{htmlAttributes=new{@class="form-control"}})
                </div>
                <span asp-validation-for="Movie.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ReleaseDate" class="control-label"></label>
                <input asp-for="Movie.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MovieList">Back to Movie List</a>
</div>